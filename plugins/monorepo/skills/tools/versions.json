{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "tools": {
    "moon": {
      "description": "Moon v2 build system and task runner",
      "version": "2.0.0-rc.2",
      "method": "proto",
      "requires": ["proto"],
      "reference": "moon.md"
    },
    "node": {
      "description": "Node.js runtime",
      "version": "lts",
      "method": "proto",
      "requires": ["proto"],
      "reference": "node.md"
    },
    "pnpm": {
      "description": "pnpm package manager",
      "version": "latest",
      "method": "proto",
      "requires": ["proto", "node"],
      "reference": "pnpm.md"
    },
    "python": {
      "description": "Python runtime",
      "version": "lts",
      "method": "proto",
      "requires": ["proto"],
      "reference": null
    },
    "uv": {
      "description": "Python package installer and resolver",
      "version": "latest",
      "method": "proto",
      "requires": ["proto", "python"],
      "reference": null
    },
    "prettier": {
      "description": "Code formatter for JS/TS/JSON/CSS/Markdown",
      "version": "3.5.3",
      "method": "pnpm",
      "requires": ["node", "pnpm"],
      "reference": "prettier.md"
    }
  },
  "methods": {
    "proto": {
      "check": "proto status -c local",
      "install": "proto pin {tool} {version} --resolve && proto use"
    },
    "pnpm": {
      "check": "pnpm list {tool} --depth=0",
      "install": "pnpm add -D -w {tool}@{version}"
    },
    "uv": {
      "check": "uv tool list",
      "install": "uv tool install {tool}=={version}"
    }
  },
  "external": {
    "proto": {
      "check": "proto --version",
      "install": "curl -fsSL https://moonrepo.dev/install/proto.sh | bash"
    }
  }
}
